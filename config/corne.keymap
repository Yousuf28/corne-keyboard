#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
};

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  MO 3|  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | NO   |
// | ESC  |  A  |  S  |  D  |  F  | 2/G |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | GUI  |  Z  |  X  |  C  | 1/V|  B  |   |  N  |  M   |  ,  |  .  |  /  | GUI  |

//      | LALT| CTRL/TAB  | LSHIFT/BKSP |   | LWR/SPC | CTRL/ENT | ALT |
                        bindings = <
   &kp ESC   &kp Q &kp W &kp E &kp R &kp T          &kp Y &kp U  &kp I     &kp O   &kp P    &kp CAPS
   &kp ESC &kp A &kp S &kp D &kp F &lt 2 G          &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &mt LGUI LEFT  &kp Z &kp X &kp C &lt 1 V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &mt LGUI DEL
     &mt LALT DOWN &mt LCTRL TAB &mt LSHIFT BSPC             &lt 1 SPACE &mt LCTRL ENTER &mt LALT UP
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  .   |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | NO |
// |  `   |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  |  .   |
// |   NO |  -  |  _  |  =  |  +  |  \  |   |     |  [  |  ]  |  {  |  }  |   NO |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp TAB &kp EXCL  &kp AT   &kp HASH  &kp DLLR  &kp PRCNT    &kp CARET   &kp AMPS   &kp STAR &kp LPAR    &kp RPAR &kp BSPC
   &kp GRAVE &kp N1  &kp N2  &kp N3   &kp N4   &kp N5  &kp N6   &kp N7   &kp N8 &kp N9    &kp N0 &kp DOT
   &trans  &kp MINUS &kp UNDER &kp EQUAL  &kp PLUS  &kp BSLH        &kp SQT   &kp LBKT   &kp RBKT &kp LBRC    &kp RBRC &trans
                                    &trans     &trans       &trans      &trans  &trans   &trans
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   // &trans  &kp BL_CYCLE &kp BL_INC &kp BL_DEC &kp DLLR &kp PRCNT   &kp HOME &kp END &caps_word &kp INS &kp RPAR &kp BSPC
   &trans  &trans &trans &trans &kp DLLR &kp PRCNT   &kp HOME &kp END &caps_word &kp INS &kp RPAR &kp BSPC
   &kp LCTRL &kp LGUI   &kp K_MUTE &kp K_VOL_DN   &kp K_VOL_UP   &trans     &kp LEFT &kp DOWN &kp UP       &kp RIGHT &kp BSLH &kp GRAVE
   // &kp RGB_TOG &kp RGB_EFF &kp RGB_EFR   &kp RGB_BRI &kp RGB_BRD &kp RGB_BRD &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &kp TILDE
    &trans &trans &trans   &trans &trans &trans &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &kp TILDE
                             &kp LGUI &trans   &kp SPACE   &kp RET   &trans    &kp RALT
                        >;
                };

 //               other_layer {
   //                     bindings = <
  // &kp  BL_TOG  &kp BL_CYCLE &kp BL_INC &kp BL_DEC &kp DLLR &kp PRCNT   &kp F7 &kp F8 &kp F9 &kp F10 &kp F11 &kp F12
  // &kp LCTRL &kp LGUI   &kp K_MUTE &kp K_VOL_DN   &kp K_VOL_UP   &trans     &kp F1 &kp F2 &kp F3       &kp F4 &kp F5 &kp F6
   // &kp RGB_TOG &kp RGB_EFF &kp RGB_EFR   &kp RGB_BRI &kp RGB_BRD &kp RGB_BRD &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &kp TILDE
      //                       &kp LGUI &trans   &kp SPACE   &kp RET   &trans    &kp RALT
        //                >;
          //      };
                
        };
};